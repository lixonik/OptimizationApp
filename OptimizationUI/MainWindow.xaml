<Window x:Class="OptimizationUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Приложение оптимизации" Height="600" Width="900"
        MinWidth="700" MinHeight="500">
  <Grid>
    <TabControl x:Name="MainTabControl">
      <TabItem Header="Математика">
        <Grid Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0">
            <TextBlock Text="Алгоритм:" FontWeight="Bold"/>
            <ComboBox x:Name="AlgoCombo" SelectionChanged="AlgoCombo_SelectionChanged"/>
            <TextBlock Text="Параметры:" FontWeight="Bold" Margin="0,10,0,0"/>
            <DataGrid x:Name="ParamsGrid" Height="150" AutoGenerateColumns="False" CanUserAddRows="False">
              <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Значение" Binding="{Binding Value}" Width="*"/>
              </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="Границы (min,max):" FontWeight="Bold" Margin="0,10,0,0"/>
            <DataGrid x:Name="BoundsGrid" Height="100" AutoGenerateColumns="False" CanUserAddRows="True">
              <DataGrid.Columns>
                <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
              </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="Функция:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="FuncBox" Height="60" AcceptsReturn="True"/>
            <CheckBox x:Name="MaximizeBox" Content="Максимизировать" Margin="0,10,0,0"/>
            <UniformGrid Columns="3" Margin="0,10,0,0">
              <Button Content="Старт" Click="Start_Click"/>
              <Button Content="Стоп"  Click="Stop_Click"/>
              <Button Content="Экспорт" Click="Export_Click"/>
            </UniformGrid>
            <ListBox x:Name="LogBox" Margin="0,10,0,0" Height="100"/>
          </StackPanel>
          <Border Grid.Column="1" Background="#f5f5f5" CornerRadius="6" Padding="6" Margin="10">
            <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendPosition="Top" ZoomMode="X"/>
          </Border>
        </Grid>
      </TabItem>

      <TabItem Header="Графовые задачи">
        <Grid Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0">
            <TextBlock Text="Задача:" FontWeight="Bold"/>
            <ComboBox x:Name="GraphTaskCombo" />
            <ContentControl x:Name="GraphParamsHost" Margin="0,10,0,0"/>
            <UniformGrid Columns="2" Margin="0,10,0,0">
              <Button Content="Старт" Click="Start_Click"/>
              <Button Content="Стоп"  Click="Stop_Click"/>
            </UniformGrid>
            <ListBox x:Name="GraphLogBox" Margin="0,10,0,0" Height="100"/>
          </StackPanel>
          <Border Grid.Column="1" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Canvas x:Name="GraphCanvas"/>
          </Border>
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
